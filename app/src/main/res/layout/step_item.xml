<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/step_number"
       android:textSize="10sp"
       android:gravity="center"
       android:textColor="@color/white"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="1"
       android:background="@drawable/round_ori"/>
    <View
        android:id="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/step_number"
        android:background="#FF6F00"
        android:layout_width="2dp"
        android:layout_height="50dp"/>
    <TextView
        android:lines="1"
        android:id="@+id/step_descrip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/step_number"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="首次安装使用"/>

    <TextView
        android:layout_marginRight="100dp"
        android:maxLines="2"
        android:layout_below="@id/step_descrip"
        android:id="@+id/step_descripe"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/step_number"
        android:textColor="#50A081"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安装后微信登录获取安装后微信登录获取安装后微信登录获取安装后微信登录获取安装后微信登录获取安装后微信登录获取安装后微信登录获取"/>
    <TextView
        android:id="@+id/step_money"
        android:textColor="@color/color_red"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1.5元"/>

    <TextView
        android:id="@+id/step_completion"
        android:padding="5dp"
        android:background="@color/blue_color"
        android:layout_below="@id/step_money"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"/>



</RelativeLayout>