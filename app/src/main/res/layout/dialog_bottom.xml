<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/header_pic"
        android:src="@mipmap/defaluthead"
        android:layout_width="80dp"
        android:layout_height="80dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="#191919"
        app:layout_constraintLeft_toRightOf="@+id/header_pic"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="百度市场--306彩票"
        android:layout_marginStart="20dp"
        tools:layout_editor_absoluteY="0dp" />
    <TextView
        android:padding="5dp"
        android:background="@drawable/black_bac"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#191919"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务教程"
        android:layout_marginEnd="20dp"
        tools:layout_editor_absoluteY="0dp" />
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/label_layout"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintLeft_toRightOf="@+id/header_pic"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">
        <TextView
            android:textSize="10sp"
            android:padding="5dp"
            android:background="@drawable/bottom_coner_bac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全"/>
        <TextView
            android:textSize="10sp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bottom_coner_bac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/subtitle"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toRightOf="@+id/header_pic"
        app:layout_constraintTop_toBottomOf="@+id/label_layout"
        android:textColor="@color/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1233人下载   17.20M"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/label_layout"
        android:textColor="@color/color_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="赚10元"
        android:layout_marginEnd="20dp" />
    
    <View
        android:id="@+id/line"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        android:background="@color/line"
        android:layout_width="328dp"
        android:layout_height="2dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/tips"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:textColor="@color/color_red"
        android:text="提示：按要求操作后返奖"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp" />
    <TextView
        android:id="@+id/shuoming"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#E5E5E5"
        android:textColor="#868686"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tips"
        android:text="复制下方关键字进入应用市场找到和图标一样的APP并下载(APP大小约17.2M，下载58万次)，排名13名左右，该页面截图"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/copy_layout"
        android:padding="5dp"
        android:background="#E5E5E5"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/shuoming"
        android:orientation="horizontal"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/defaluthead"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击虚线复制"/>

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/stoke_bac"
                android:id="@+id/copy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京幸运28"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/start_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/start_btn_conner"
        android:textColor="@color/white"
        android:text="开始任务"
        app:layout_constraintTop_toBottomOf="@+id/copy_layout"
        android:layout_width="160dp"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>