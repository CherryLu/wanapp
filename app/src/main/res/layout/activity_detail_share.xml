<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/title_layout"/>

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/app_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/defaluthead" />

            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/app_pic"
                android:text="学生赚-手机赚钱" />
            <TextView

                android:layout_below="@id/app_name"
                android:id="@+id/app_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/app_pic"
                android:text="2018-08-08" />

            <LinearLayout
                android:id="@+id/pic_layout"
                android:layout_marginTop="10dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:layout_below="@+id/app_pic"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@mipmap/default_image"/>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
        <TextView
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/round_ori_bac"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="规则"/>

    <TextView
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/origin_conner_bac"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        android:text="分享"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>